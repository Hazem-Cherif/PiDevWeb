{% extends '@Club/Default/layoutBack.html.twig' %}

{% block body %}

<h2>Liste des Evenements</h2>
                        <h3>
<table border=5 >
    <tr style="color : #FF6B6B">
        <td>Id  </td>
        <td>Nom  </td>
        <td>Description </td>
        <td>Date debut </td>
        <td>Date fin </td>
        <td>Club</td>

    </tr>
    {% for e in evenement %}
        <tr style="color :#00a6b2">
            <td>{{ e.id }} </td>
            <td>{{ e.nom }} </td>
            <td>{{ e.description }}</td>
            <td>{{ e.dateDebut|date('d/m/Y') }}</td>
            <td>{{ e.dateFin|date('d/m/Y') }}</td>
            <td>{{ e.club.nom }}</td>
            <td><img src="{{ asset('Upload/')}}{{ e.nomfile }}" width="100" class="img-circle" /></td>
            <td> <a href="{{ path('suppevent',{'id':e.id}) }}">Supprimer</a></td>
            <td> <a href="{{ path('Updateevent',{'id':e.id}) }}">Modifier</a></td></tr>

        </tr>
    {% endfor %}
</table>
                        </h3>

    <div class="text-center">{{ knp_pagination_render(evenement) }}</div>

{% endblock %}